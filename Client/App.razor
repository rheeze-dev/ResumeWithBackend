<Router AppAssembly="@typeof(App).Assembly">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <PageTitle>Not found</PageTitle>
        <LayoutView Layout="@typeof(MainLayout)">
            <main class="d-flex flex-column min-vh-100 justify-content-center align-items-center">
                <h1 class="mb-3">Sorry, we cannot find that page.</h1>
                <h1 class="f-size-3 mb-5"><i class="far fa-frown"></i></h1>
                <a href="/" class="h1">Back to home</a>
            </main>
        </LayoutView>
    </NotFound>
</Router>
